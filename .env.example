# === LLM Providers ===
# Primary: Groq (free tier, fast)
GROQ_API_KEY=your_groq_api_key_here

# Fallback: Google Gemini (free tier)
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: OpenAI (paid, most reliable)
# OPENAI_API_KEY=your_openai_api_key_here

# === API Security ===
# Set this to protect your endpoint (sent as x-api-key header)
API_KEY=your_secret_api_key_here

# === Application Settings ===
# Maximum conversation turns before terminating
MAX_TURNS=20

# ChromaDB storage path (relative)
CHROMA_DB_PATH=./data/chroma_db

# Embedding model for RAG
EMBEDDING_MODEL=all-MiniLM-L6-v2